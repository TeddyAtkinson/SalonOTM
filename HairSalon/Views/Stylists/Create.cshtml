@{
  Layout = "_Layout";
}

@model Salon.Models.Stylist

<div class="container">
  <h3 class="jumbotron">Add a new Stylist:</h3>

  @using (Html.BeginForm())
  {
    @Html.TextBoxFor(model => model.Name, new { placeholder = "Name", style = "text-align: center;" })
    <input type="submit" value="Add a new stylist" class="btn btn-warning" />
  }
  <p>@Html.ActionLink("Show all Stylists", "Index")</p>
</div>